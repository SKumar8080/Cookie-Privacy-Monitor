{
  "manifest_version": 3,
  "name": "Cookie Privacy Monitor",
  "version": "1.0.0",
  "description": "Monitor and manage cookies for enhanced privacy protection",
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cookie Privacy Monitor"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}